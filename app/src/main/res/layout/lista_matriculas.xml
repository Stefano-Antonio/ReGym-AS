<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp"
    android:elevation="8dp"
    android:layout_gravity="center">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Administrar Matrículas"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="16dp"
        android:textColor="@color/black" />

    <!-- Lista de matrículas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListaMatriculas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:padding="8dp"
        android:scrollbars="vertical" />

    <!-- Campo de texto y botón de agregar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <EditText
            android:id="@+id/etNuevaMatricula"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nueva matrícula"
            android:padding="12dp"
            android:inputType="text"
            android:imeOptions="actionDone" />

        <Button
            android:id="@+id/btnAgregarMatricula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Agregar"
            android:backgroundTint="#781005"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Botón de cerrar -->
    <Button
        android:id="@+id/btnCerrarPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cerrar"
        android:backgroundTint="#781005"
        android:textColor="@android:color/white" />

</LinearLayout>
