<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="generacion_rutina.movimientos_piso_gr.Movimientos_Piso_N1_Gr">

    <ImageView
        android:id="@+id/Fondo_ginda2"
        android:layout_width="634dp"
        android:layout_height="119dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fondo_vino" />

    <TextView
        android:id="@+id/Mensaje_bienvenida"
        android:layout_width="269dp"
        android:layout_height="68dp"
        android:layout_marginTop="32dp"
        android:background="#781005"
        android:gravity="center"
        android:text="Movimientos de barra nivel 5"
        android:textColor="#F8F6F6"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Fondo_ginda2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="116dp"
        android:layout_height="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        app:srcCompat="@drawable/logo_incufidez_fondo_vino" />

    <Button
        android:id="@+id/Regresar_btn"
        android:layout_width="76dp"
        android:layout_height="66dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#781005"
        android:drawableTop="@drawable/flechamedia_regreso"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/Fondo_ginda2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Fondo_ginda2"
        app:layout_constraintVertical_bias="0.2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="300dp"
        android:layout_height="335dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mensaje_bienvenida">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:id="@+id/Movimiento1_swtch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="POSICION INICIAL"
                android:layout_gravity="center_horizontal" />

            <Switch
                android:id="@+id/Movimiento2_swtch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IMPULSO POR ARRIBA DE LA HORIZONTAL"
                android:layout_gravity="center_horizontal" />

            <Switch
                android:id="@+id/Movimiento3_swtch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VUELTA DE APOYO LIBRE POR ARRIBA DE LA HORIZONTAL"
                android:layout_gravity="center_horizontal" />

            <Switch
                android:id="@+id/Movimiento4_swtch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PLANTILLAS COMPLETAS ATRÁS AL APOYO LIBRE"
                android:layout_gravity="center_horizontal" />

            <Switch
                android:id="@+id/Movimiento5_swtch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STALDER ATRÁS AL APOYO LIBRE"
                android:layout_gravity="center_horizontal" />

            <Switch
                android:id="@+id/Movimiento6_swtch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KIP CARPADO O CON PIERNAS SEPARADAS"
                android:layout_gravity="center_horizontal" />

            <Switch
                android:id="@+id/Movimiento7_swtch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IMPULSO, COLOCACIÓN DE CUCLILLAS"
                android:layout_gravity="center_horizontal" />

            <Switch
                android:id="@+id/Movimiento8_swtch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SALTO A KIP DE SUSPENSIÓN LARGA"
                android:layout_gravity="center_horizontal" />

            <Switch
                android:id="@+id/Movimiento9_swtch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IMPULSO POR ARRIBA DE LA HORIZONTAL"
                android:layout_gravity="center_horizontal" />

            <Switch
                android:id="@+id/Movimiento10_swtch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MEDIO GIGANTE AL APOYO"
                android:layout_gravity="center_horizontal" />

            <Switch
                android:id="@+id/Movimiento11_swtch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUB BALANCEO, PRIMER CONTRABALANCEO"
                android:layout_gravity="center_horizontal" />

            <Switch
                android:id="@+id/Movimiento12_swtch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRIMER CONTRABALANCEO"
                android:layout_gravity="center_horizontal" />

            <Switch
                android:id="@+id/Movimiento13_swtch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BALANCEO AL FRENTE, SEGUNDO CONTRABALANCEO"
                android:layout_gravity="center_horizontal" />

            <Switch
                android:id="@+id/Movimiento14_swtch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SEGUNDO CONTRABALANCEO"
                android:layout_gravity="center_horizontal" />

            <Switch
                android:id="@+id/Movimiento15_swtch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BALANCEO AL FRENTE A SALIDA DE FLYAWAY"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/Generar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#781005"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />


</androidx.constraintlayout.widget.ConstraintLayout>